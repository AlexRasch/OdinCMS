@model Company


@{
    ViewData["Title"] = Model.Id !=0 ? "Update" : "Create" + " product";
}

<h1>@ViewData["Title"]</h1>
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name"></span>

    <label asp-for="StreetAddress"></label>
    <input asp-for="StreetAddress" class="form-control" />
    <span asp-validation-for="StreetAddress"></span>
    
    <label asp-for="City"></label>
    <input asp-for="City" class="form-control" />
    <span asp-validation-for="City"></span>

    <label asp-for="Region"></label>
    <input asp-for="Region" class="form-control" />
    <span asp-validation-for="Region"></span>

    <label asp-for="PostalCode"></label>
    <input asp-for="PostalCode" class="form-control" />
    <span asp-validation-for="PostalCode"></span>

    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber"></span>


    @if(Model.Id != 0)
    {
        <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>
    }
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}